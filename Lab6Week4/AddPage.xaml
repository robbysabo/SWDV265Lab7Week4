<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab6Week4.AddPage"
             Title="AddPage">
    <VerticalStackLayout>
        <Label
            Text="List of all pizza toppings"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Label
            Text="{Binding ToppingText}"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Label 
                Text="Add New Topping"
                Style="{StaticResource SmallText}" />
            <Button 
                Text="+"
                Command="{Binding EnterNewTopping}"
                CommandParameter="{Binding Source={x:Reference theEntry}, Path=Text}"
                />
            <Entry
                x:Name="theEntry"
                Placeholder="Add a new topping"
                MinimumWidthRequest="200"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>